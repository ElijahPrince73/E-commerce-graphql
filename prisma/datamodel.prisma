type User {
  id: ID! @id
  email: String! @unique
  password: String!
  cart: Cart
  orders: [Order]
}

type Cart {
  id: ID! @id
  user: User @relation(link: INLINE)
  items: [Product!]! @relation(link: INLINE)
}

type Product {
  id: ID! @id
  productName: String!
  productDescription: String!
  price: Int
  images: [Image!] @relation(link: INLINE)
  sku: String
  category: Category @relation(link: INLINE)
}

type Order {
  id: ID! @id
  productList: [Product!]! @relation(link: INLINE)
  email: String!
  address: String!
  address2: String
  zip: String!
  totalAmount: Int!
  orderInt: Int!
  items: Int!
  orderedBy: [User] @relation(link: INLINE)
}

type Image {
  id: ID! @id
  alt: String
}

type Category {
  id: ID! @id
  categoryName: String!
  categoryDescription: String!
  productList: [Product!]!
  image: String!
}